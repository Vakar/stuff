<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>

    <constant name="struts.devMode" value="true"/>

    <package name="basicstruts2" extends="struts-default">

        <!-- Stuff Navigation Actions -->
        <action name="stuffListPage" class="vakar.space.stuff.ui.struts2.action.StuffList" method="execute">
            <result name="success">/WEB-INF/view/stuffList.jsp</result>
        </action>
        <action name="stuffAddPage">
            <result>/WEB-INF/view/stuffAdd.jsp</result>
        </action>
        <action name="stuffEditPage" class="vakar.space.stuff.ui.struts2.action.StuffEdit" method="execute">
            <result>/WEB-INF/view/stuffEdit.jsp</result>
        </action>
        <!-- Stuff CRUD Actions -->
        <action name="stuffSave" class="vakar.space.stuff.ui.struts2.action.StuffSave" method="execute">
            <result name="success" type="redirect">/stuffListPage</result>
        </action>
        <action name="stuffUpdate" class="vakar.space.stuff.ui.struts2.action.StuffUpdate" method="execute">
            <result name="success" type="redirect">/stuffListPage</result>
        </action>
        <action name="stuffDelete" class="vakar.space.stuff.ui.struts2.action.StuffDelete" method="execute">
            <result name="success" type="redirect">/stuffListPage</result>
        </action>

    </package>

</struts>
